{
  "private": true,
  "name": "helloworld-express",
  "version": "0.1.0",
  "engines": {
    "node": "^14.0.0",
    "npm": "^6.0.0 || ^7.0.0"
  },
  "scripts": {
    "postinstall": "ln -fs '../src' './node_modules/~'",
    "start": "npm run app",
    "app": "nodemon -r esm --inspect --inspect-port=5900 ./app-all.js",
    "app:core": "nodemon -r esm --inspect --inspect-port=5901 ./app-core.js",
    "app:api": "nodemon -r esm --inspect --inspect-port=5902 ./app-api.js",
    "app:job": "nodemon -r esm --inspect --inspect-port=5903 ./app-job.js",
    "app:console": "node -r esm ./app-console.js",
    "run-script": "node -r esm",
    "data:clear": "node -r esm ./scripts/data-clear.js;",
    "data:seed": "node -r esm ./scripts/data-seed.js;",
    "lint": "eslint --cache ./",
    "format": "prettier --list-different --write '**/.*.{yml,json,js}' '**/*.{md,yml,json,ts,html,css,scss}' ; npm run lint -- --quiet --fix",
    "typecheck": "tsc -p jsconfig.json",
    "test": "jest --runInBand",
    "test:unit": "jest --runInBand \\.test\\.js",
    "test:spec": "jest --runInBand \\.spec\\.js",
    "docs": "npm run docs:jsdoc ; npm run docs:apib ; npm run docs:postman",
    "docs:jsdoc": "jsdoc -c ./jsdoc.json",
    "docs:apib": "mkdir -p ./generated/apib ; docker run -it --rm -u $(id -u) -v $PWD:/data emiketic/development aglio --theme-variables flatly -o /data/generated/apib/index.html -i /data/docs/api/index.apib",
    "docs:postman": "mkdir -p ./generated/postman ; docker run -it --rm -u $(id -u) -v $PWD:/data emiketic/development sh -c 'cat $(find /data/ -name *.apib) | apiary2postman blueprint > /data/generated/postman/API.postman_collection.json'"
  },
  "dependencies": {
    "bcrypt": "~5.0.1",
    "bull": "~3.22.4",
    "debug": "~4.3.1",
    "dotenv": "~9.0.0",
    "ejs": "~3.1.6",
    "esm": "~3.2.25",
    "events": "~3.3.0",
    "express": "~4.17.1",
    "express-async-errors": "~3.1.1",
    "express-graphql": "~0.12.0",
    "formdata-node": "~3.3.0",
    "glob": "~7.1.7",
    "graphql": "~15.5.0",
    "jsonwebtoken": "~8.5.1",
    "juice": "~7.0.0",
    "morgan": "~1.10.0",
    "node-fetch": "~2.6.1",
    "node-schedule": "~2.0.0",
    "notifme-sdk": "~1.10.0",
    "redis": "~3.1.2",
    "sails-disk": "~2.1.0",
    "sails-mongo": "~2.0.0",
    "uuid": "~8.3.2",
    "waterline": "~0.13.6"
  },
  "devDependencies": {
    "@babel/core": "~7.14.0",
    "@babel/preset-env": "~7.14.1",
    "@types/express": "~4.17.11",
    "@types/glob": "~7.1.3",
    "@types/jest": "~26.0.23",
    "@types/node": "^14.0.0",
    "babel-eslint": "~10.1.0",
    "babel-jest": "~26.6.3",
    "eslint": "~7.26.0",
    "eslint-config-airbnb-base": "~14.2.1",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~3.4.0",
    "jest": "~26.6.3",
    "jsdoc": "~3.6.6",
    "nodemon": "~2.0.7",
    "prettier": "~2.2.1",
    "whatwg-fetch": "~3.6.2"
  }
}
